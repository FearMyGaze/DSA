<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_rounded_bottom_sheet">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottomSheetUploadPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="@string/bottomSheetDialogUploadPicture"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_outline_file_upload_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottomSheetContainer" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottomSheetUploadPDF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="@string/bottomSheetDialogUploadPDF"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_outline_new_file_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomSheetUploadPicture" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottomSheetCreateTxtFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="@string/bottomSheetDialogCreateTxtFile"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_outline_new_file_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomSheetUploadPDF" />

</androidx.constraintlayout.widget.ConstraintLayout>